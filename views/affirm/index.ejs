<% if (currentUser) { %> 
<div class="container">
    <h1 class="text-center">affirmations</h1>
    <p class="text-center">
      <a href="/affirm/new">new</a>
    </p>
  
    <% selfAffirm.forEach((selfAffirm, index) => { %>
      <div class="well">
        <h2><%= selfAffirm.content %></h2>
        <form method="GET" action="/affirm/<%= selfAffirm.id %>">
          <input hidden type="text" name="selfAffirm" value="<%= selfAffirm.content %>">
          <button class="btn btn-primary" type="submit" value="view">view</button>
        </form>
      </div>
      
    <% }); %>
  </div>

<% } else { %>
  
<% } %>